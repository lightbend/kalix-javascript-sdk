{
  "ignoreFile": "sdk/.gitignore",
  "ignore": [
    "build",
    "codegen",
    "docs",
    "**/.*",
    "**/bin",
    "**/template",
    "**/Dockerfile",
    "**/*.md",
    "**/*.yml",
    "samples/*/lib/generated",
    "sdk/test/*.desc",
    "typescript/tck/generated"
  ],
  "license": "build/header.txt",
  "licenseFormats": {
    "js": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "ts": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "proto": {
      "eachLine": {
        "prepend": "// "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
