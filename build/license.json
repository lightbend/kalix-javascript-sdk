{
  "ignoreFile": "sdk/.gitignore",
  "ignore": ["build", "docs", "**/.*", "**/bin", "**/Dockerfile", "**/*.md", "**/*.yml"],
  "license": "build/header.txt",
  "licenseFormats": {
    "js": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "ts": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "proto": {
      "eachLine": {
        "prepend": "// "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
