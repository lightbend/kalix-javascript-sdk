{
  "ignoreFile": "sdk/.gitignore",
  "ignore": [
    "build",
    "codegen",
    "docs",
    "**/.*",
    "**/bin",
    "**/template",
    "**/Dockerfile",
    "**/*.md",
    "**/*.yml",
    "samples/*/*/lib/generated",
    "sdk/test/*.desc",
    "styles/config/vocabularies/Base",
    "tck/generated",
    "testkit/integration-test/proto.*"
  ],
  "license": "build/header.txt",
  "licenseFormats": {
    "js": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "ts": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "jsdoc": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "proto": {
      "eachLine": {
        "prepend": "// "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
